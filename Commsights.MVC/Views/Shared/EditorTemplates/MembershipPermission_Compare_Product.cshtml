
@(Html.Kendo().DropDownListFor(t => t)
                   .DataValueField("ID")
                   .DataTextField("ProductName")
                   .HtmlAttributes(new { data_bind = ViewData["ValueBind"], @class = "form-control" })
                    .Filter(FilterType.StartsWith)
                   .DataSource(dataSource => dataSource.Ajax().Read(t => t.Action("GetMembershipProductToList", "MembershipPermission", new { membershipID = ViewData["CompareID"] })))
)