                   .DataValueField("ID")
                   .DataTextField("ProductName")
                   .HtmlAttributes(new {data_bind= "value: Product", @class = "form-control" })
                    .Filter(FilterType.Contains)
                     .Virtual(v => v.ItemHeight(26).ValueMapper("valueMapper"))                     
